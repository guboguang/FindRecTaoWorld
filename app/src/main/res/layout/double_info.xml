<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/double_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/double_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:text="hahahahhgfvhjhfgjfghfjhgfjghfhfjghfhgjg"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/double_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="left|center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="123ww"
            android:textColor="#f00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/double_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/double_name"
            android:layout_below="@+id/double_name"
            android:paddingRight="10dp"
            android:textSize="10dp"
            android:layout_marginRight="5dp"
            android:gravity="right|center"
            android:layout_weight="1"
            android:textColor="@android:color/darker_gray"
            android:text="收藏000" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/double_countryImg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
             />

        <TextView
            android:id="@+id/double_place"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:textSize="10dp"
            android:gravity="center"
            android:text="产地" />

    </LinearLayout>


</LinearLayout>