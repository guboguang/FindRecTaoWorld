<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#fff"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/one_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />
    <TextView
        android:layout_alignTop="@id/one_picture"
        android:layout_toRightOf="@id/one_picture"
        android:id="@+id/brand_tv1"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="NIKE"
        android:textSize="9sp"
        android:layout_width="wrap_content"
        android:layout_height="12dp" />
    <TextView
        android:id="@+id/brand_tv2"
        android:textColor="#000"
        android:text="粉丝：8888"
        android:textSize="9sp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@id/one_picture"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignBottom="@+id/one_picture"
        />

</RelativeLayout>
