<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list2_picture1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@mipmap/tab_discovery_s" />

    <TextView
        android:id="@+id/list2_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="@string/judy_asang" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list2_picture2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/tab_mine_s" />

        <TextView
            android:id="@+id/list2_tv2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="早上的风" />

        <ImageView
            android:id="@+id/list2_picture3"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/find_selec_like"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>
