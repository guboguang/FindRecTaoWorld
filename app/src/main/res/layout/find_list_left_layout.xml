<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:id="@+id/myviewoflist_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#fff"
    android:padding="2dp"

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/list_picture1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@mipmap/tab_discovery_s" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"/>

    <TextView
        android:id="@+id/list_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/judy_asang" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_picture2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/tab_mine_s" />

        <TextView
            android:id="@+id/list_tv2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10dp"
            android:gravity="center_vertical"
            android:text="早上的风" />

        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/list_picture3"
            android:layout_width="20dp"
            android:clickable="true"
            android:background="@drawable/find_selec_like"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>

