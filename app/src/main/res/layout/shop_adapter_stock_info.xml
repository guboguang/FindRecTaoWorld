<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_stock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@android:mipmap/sym_def_app_icon" />

        <TextView
            android:id="@+id/tv_stock_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
           android:layout_marginTop="3dp"
            android:text="slfskf"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="2dp"
            android:text="salkfjdslakjfdsafdsafdsafdsafdsafdsfdsafdd"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stock_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="$240"
                android:textColor="#f00"
                android:textSize="12sp" />

            <com.flame.icebound.taoworld.modules.shop.widget.BorderTextView
                android:id="@+id/tv_stock_disscountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="55æŠ˜"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

</LinearLayout>