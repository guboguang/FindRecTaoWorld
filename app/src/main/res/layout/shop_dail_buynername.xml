<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        
        <ImageView
            android:id="@+id/iv_shop_dail_buyner"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:src="@android:mipmap/sym_def_app_icon"/>
        
        <TextView
            android:id="@+id/tv_shop_buyername"
            android:text="北美扫货神兽"
            android:layout_alignTop="@+id/iv_shop_dail_buyner"
            android:layout_toRightOf="@+id/iv_shop_dail_buyner"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:padding="5dp"/>
        <RatingBar
            android:layout_alignTop="@+id/tv_shop_buyername"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/tv_shop_buyername"
            android:progressDrawable="@drawable/start"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:isIndicator="true"
            android:max="10"
            android:numStars="5"
            android:stepSize="0.5"
            />
        <TextView
            android:id="@+id/tv_shop_dail_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国"
            android:background="@drawable/textshape"
            android:padding="5dp"
            android:layout_toRightOf="@id/iv_shop_dail_buyner"
            android:layout_below="@+id/tv_shop_buyername"/>

        <TextView
            android:id="@+id/tv_shop_fans"
            android:layout_toRightOf="@id/tv_shop_dail_place"
            android:layout_alignTop="@+id/tv_shop_dail_place"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="粉丝250"/>

        <TextView
            android:id="@+id/tv_shop_count"
            android:layout_toRightOf="@id/tv_shop_fans"
            android:layout_alignTop="@+id/tv_shop_fans"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="销量200"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_shop_count"
            android:textColor="#f00"
            android:textSize="15sp"
            android:padding="5dp"
            android:text="+收藏"
            android:background="@drawable/textshape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shop_goods_diss"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品描述"/>
        <TextView
        android:id="@+id/tv_shop_goods_speed"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_shop_goods_diss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发货速度"/>
        <TextView
            android:id="@+id/tv_shop_goods_serve"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_shop_goods_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务态度"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shop_goshop"
            android:layout_width="150dp"
            android:gravity="center"
            android:text="进店逛逛"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@drawable/textshape"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>