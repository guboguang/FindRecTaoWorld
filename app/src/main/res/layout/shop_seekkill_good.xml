<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp">
        <ImageView
            android:id="@+id/iv_shop_seckKill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_shop_seckKill_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="1dp"
            android:text="3.2折"
            android:textSize="8sp"
            android:layout_marginLeft="5dp"
            android:background="@android:color/holo_red_light"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_seckKill_priceOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="right|bottom"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginRight="2dp"
            android:text="$10000"/>

        <TextView
            android:id="@+id/tv_shop_seckKill_originPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="8sp"
            android:gravity="left|bottom"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/darker_gray"
            android:text="15000"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_shop_seckKill_name"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="klsdajfdlsk;ajfdlksajfdlskajfd;aslkfjdalkfdsalfdaj;fkldasafdsafds"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"/>

    <com.flame.icebound.taoworld.modules.shop.widget.BorderTextView
        android:id="@+id/tv_shop_seckKill_goBuy"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/holo_red_light"
        android:textSize="13sp"
        android:text="去购买"/>

</LinearLayout>